<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp"
    android:elevation="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:background="@drawable/gradient_background"
        android:padding="8dp">

        <TextView
            android:id="@+id/edt_services"
            android:layout_width="129dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Services Title"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/edt_barber_name"
            android:layout_width="139dp"
            android:layout_height="47dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/imageIcon"
            android:fontFamily="sans-serif-condensed-light"
            android:padding="4dp"
            android:text="@string/hint_barber_name"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/edt_barber_name"
            tools:ignore="MissingConstraints,NotSibling"
            tools:layout_editor_absoluteX="6dp" />

        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:fontFamily="sans-serif-condensed-light"
            android:padding="4dp"
            android:text="@string/hint_cost"
            android:textColor="@color/white"
            android:textSize="30sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="48dp" />

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="146dp"
            android:layout_height="103dp"
            android:layout_margin="4dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/moe"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>